{
  "name": "pascalcss-site",
  "version": "1.0.0",
  "description": "Official landing page and documentation for PascalCSS",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "npm run generate:classes && nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "generate:classes": "node scripts/generate-classes.js"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.4.4",
    "@nuxtjs/sitemap": "^6.1.1",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@vueuse/core": "^11.2.0",
    "@vueuse/nuxt": "^11.2.0",
    "fuse.js": "^7.0.0",
    "isomorphic-dompurify": "^2.16.0",
    "nuxt": "^3.14.1592",
    "nuxt-schema-org": "^3.4.0",
    "virtua": "^0.33.3",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.15.1",
    "@types/node": "^22.9.3",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
